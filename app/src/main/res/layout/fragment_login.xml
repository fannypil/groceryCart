<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.LoginFragment" >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:src="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/light_sky_blue"
        android:textSize="60sp" />
    <EditText
        android:id="@+id/editTextEmailLoginFrag"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8dp"
        android:background="@drawable/edittext_bkg"
        android:hint="Enter Email"
        android:ems="10"
        android:inputType="text|textEmailAddress"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPasswordLoginFrag"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:ems="10"
        android:hint="Enter Password"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="8dp"
        android:background="@drawable/edittext_bkg"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnborder"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Login"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRegisterLogFrag"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="New here? Sign up here"
        android:textColor="@color/light_sky_blue"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>